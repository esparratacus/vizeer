<h2>Inicio de sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="errorHandler alert alert-danger no-display">
		<i class="icon-remove-sign"></i> You have some form errors. Please check below.
</div>
<fieldset>
  <div class="form-group">
  <span class="input-icon">
  <%= f.email_field :email, class: "form-control", placeholder: "Nombre de usuario",autofocus: true %>
  <i class="fa fa-user"></i> </span>
	</div>
  
  	<div class="form-group form-actions">
  		<span class="input-icon">
    	<%= f.password_field :password, class: "form-control password",placeholder:"Contraseña",autocomplete: "off" %>
    	<i class="fa fa-lock"></i>
    	<a class="forgot" href="?box=forgot">
    	Olvidé mi contraseña
		</a> </span>
	</div>
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :recordarme %></div>
  <% end -%>

  <button type="submit" class="btn btn-bricky pull-right" >Iniciar sesión<i class="fa fa-arrow-circle-right"></i></button>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
