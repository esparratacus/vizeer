
<div class="row">
	<div class="col-md-12">
		<!-- start: BASIC TABLE PANEL -->
		<div class="panel panel-default">
			<div class="panel-heading">
				<i class="fa fa-external-link-square"></i>
				Usuarios
				<div class="panel-tools">
				</div>
			</div>
			<div class="panel-body">
				<table class="table table-hover" id="sample-table-1">
					<thead>
						<tr>
							<th class="center">#</th>
							<th>Email</th>
							<th class="center">Alumno</th>
							<th class="center">Consejero</th>
							<th class="center">Profesor</th>
							<th class="center">Administrador</th>
						</tr>
					</thead>
					<tbody>
						<%@users.each do |user|%>
						<tr>
							<td class="center"><%= user.id%></td>
							<td><%= user.email%></td>
							<td class="center"> <%if user.has_role? :estudiante %>
							<i class="glyphicon glyphicon-ok" style="color: green;"></i>
							<%else%>
							<i class="glyphicon glyphicon-remove" style="color: red;"></i>
							<%end%> </td>
							<td class="center"> <%if user.has_role? :consejero %>
							<i class="glyphicon glyphicon-ok" style="color: green;"></i>
							<%else%>
							<i class="glyphicon glyphicon-remove" style="color: red;"></i>
							<%end%> </td>
							<td class="center"> <%if user.has_role? :profesor %>
							<i class="glyphicon glyphicon-ok" style="color: green;"></i>
							<%else%>
							<i class="glyphicon glyphicon-remove" style="color: red;"></i>
							<%end%> </td>
							<td class="center"> <%if user.has_role? :admin %>
							<i class="glyphicon glyphicon-ok" style="color: green;"></i>
							<%else%>
							<i class="glyphicon glyphicon-remove" style="color: red;"></i>
							<%end%> </td>
							<td class="center">
							<div class="visible-md visible-lg hidden-sm hidden-xs">
								<%= link_to edit_user_path(user),:remote => true,class: "btn btn-xs btn-teal tooltips",:data=>{:placement=>"top",:originaltitle=>"Edit"} do%>
								<i class="fa fa-edit"></i>
								<%end%>
								<a href="#" class="btn btn-xs btn-bricky tooltips" data-placement="top" data-original-title="Remove"><i class="fa fa-times fa fa-white"></i></a>
							</div>
							<div class="visible-xs visible-sm hidden-md hidden-lg">
								<div class="btn-group">
									<a class="btn btn-primary dropdown-toggle btn-sm" data-toggle="dropdown" href="#"> <i class="fa fa-cog"></i> <span class="caret"></span> </a>
									<ul role="menu" class="dropdown-menu pull-right">
										<li role="presentation">
											<a role="menuitem" tabindex="-1" href="#"> <i class="fa fa-edit"></i> Edit </a>
										</li>
										<li role="presentation">
											<a role="menuitem" tabindex="-1" href="#"> <i class="fa fa-times"></i> Remove </a>
										</li>
									</ul>
								</div>
							</div></td>
						</tr>
						<%end%>
					</tbody>
				</table>
			</div> 
		</div>
		<!-- end: BASIC TABLE PANEL -->

	</div>
</div>
<div class="modal fade" id="myModal" tabindex="-1" data-width="760" style="display: none;">
</div>

